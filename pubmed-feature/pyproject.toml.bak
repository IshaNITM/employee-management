[tool.poetry]
name = "pubmed-fetcher"
version = "0.1.0"
description = "A tool to fetch PubMed papers with pharmaceutical/biotech affiliations"
authors = ["Your Name <your.email@example.com>"]
readme = "README.md"

[tool.poetry.dependencies]
python = "^3.8"
flask = "^2.0.1"
requests = "^2.26.0"
beautifulsoup4 = "^4.10.0"
python-dotenv = "^0.19.0"

[tool.poetry.scripts]
get-papers-list = "cli.cli:main"

[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"